<div class="mt-4">

  <div class="create-button"><a href="/home/list">
    <button type="button" class="btn btn-success home-buttons">List style</button></a>
  </div>

  <div class="row">
    {{#each courses}}
      <div class="col-sm-6 col-lg-3">

        <div class="card card-course-item">

          <img class="card-img-top" src="{{this.image}}" alt="Card image cap" />

          <div class="card-body">

            <h5 class="card-title">{{this.name}}</h5>

            <p class="card-text">{{this.description}}</p>
          </div>
          <a href="/courses/{{this.slug}}" class="btn btn-primary">Let's study</a>
        </div>

      </div>
    {{/each}}
  </div>
</div>