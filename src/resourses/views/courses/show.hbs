<div class="mt-4">
  <div class="row">
    <div class="col-lg-3">
      <button type="button" class="btn btn-info">
        Features
        <span class="badge badge-light">3</span>
      </button>
      <br> <br> <br>
      <h6>Level:
        {{courses.level}}
        <br>
        <br>
        Learn forever
      </h6>
    </div>

    <div class="col-lg-9">
      <h2>{{courses.name}}</h2>
      <iframe
        width="560"
        height="315"
        src="https://www.youtube.com/embed/{{courses.vidId}}"
        title="YouTube video player"
        frameborder="0"
        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
        allowfullscreen
      ></iframe>
      <h5>{{courses.description}}</h5>
    </div>
  </div>
</div>